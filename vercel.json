{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.9.0"
    }
  },
  "routes": [
    { "src": "/features", "dest": "/api/features.php" },
    { "src": "/pricing", "dest": "/api/pricing.php" },
    { "src": "/dashboard", "dest": "/api/dashboard.php" },
    { "src": "/contact", "dest": "/api/contact.php" },
    { "src": "/process-contact", "dest": "/api/process-contact.php" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}